= render "devise/shared/bg"
.formatted-form
  = devise_error_messages!
  %h1 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.email_field :email, placeholder: "KU Email (e.g. K123456@kingston.ac.uk)", autofocus: true
    = f.text_field :first_name, placeholder: "First name"
    = f.text_field :last_name, placeholder: "Surname"
    - if @validatable
      = f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)", autocomplete: "off"
    - else
      = f.password_field :password, placeholder: "Password", autocomplete: "off"
    = f.password_field :password_confirmation, placeholder: "Confirm your password", autocomplete: "off"
    .center
      = f.submit "Sign up"
