.formatted-form.cv-form
  %h1 Your CV
  %h2.sub-title Fill the fields below.
  = form_for [@job, @cv] do |f|
    .field
      = f.label :name, 'Your full name'
      = f.text_field :name, placeholder: 'Your full name'
    .field
      = f.label :address, 'Address'
      = f.text_field :address, placeholder: 'Address'
    .field
      = f.label :email, 'Email'
      = f.email_field :email, placeholder: 'Email'
    .field
      = f.label :phone_number, 'Phone number'
      = f.phone_field :phone_number, placeholder: 'Phone number'
    .field
      = f.label :personal_profile, 'Personal profile'
      = f.text_area :personal_profile, placeholder: 'Personal profile'
    .field
      = f.label :education, 'Education'
      = f.text_area :education, placeholder: 'Education'
    .field
      = f.label :technical_skills, 'Technical skills'
      = f.text_area :technical_skills, placeholder: 'Technical skills'
    .field
      = f.label :project_work, 'Project work'
      = f.text_area :project_work, placeholder: 'Project work'
    .field
      = f.label :professional_experience, 'Professional experience'
      = f.text_area :professional_experience, placeholder: 'Professional experience'
    .field
      = f.label :interests_and_achievements, 'Interests and achievements'
      = f.text_area :interests_and_achievements, placeholder: 'Interests and achievements'
    .field
      = f.label :references, 'References'
      = f.text_area :references, placeholder: 'References'
    = f.submit
  .under-form-links
