.center
  = link_to "Create new CV", new_cv_path
- @cvs.each do |cv|
  .cv-box
    .cv-preview CV PREVIEW
    .cv-details
      .header Details
      %table
        - if cv.job.present?
          %tr
            %td Created for:
            %td= link_to cv.job.title, job_path(cv.job)
        %tr
          %td Created date:
          %td= cv.created_at.strftime("%H:%m %d.%m.%Y")
        %tr
          %td Feedback status:
          - if cv.feedback.present?
            %td.feedback-status{class: "#{cv.feedback.status}"}
              = link_to cv.feedback.status, feedback_path(cv.feedback)
          - else
            %td.feedback-status 
              pending
      .buttons.center
        = link_to "Edit CV", edit_cv_path(cv), class: "big-btn"
        = link_to "Remove CV", cv_path(cv), data: { confirm: "Are you sure?" }, method: :delete, class: "big-btn"
