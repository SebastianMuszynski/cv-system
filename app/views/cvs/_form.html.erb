<div class="formatted-form">
  <h1>Create new CV</h1>
  <h2 class="sub-title">Fill the fields below.</h2>
  <%= form_for @cv do |f| %>
    <%= f.text_field :name, placeholder: 'Your full name' %>
    <%= f.text_field :address, placeholder: 'Address' %>
    <%= f.email_field :email, placeholder: 'Email' %>
    <%= f.phone_field :phone_number, placeholder: 'Phone number' %>
    <%= f.text_field :personal_profile, placeholder: 'Personal profile' %>
    <%= f.text_field :education, placeholder: 'Education' %>
    <%= f.text_field :technical_skills, placeholder: 'Technical skills' %>
    <%= f.text_field :project_work, placeholder: 'Project work' %>
    <%= f.text_field :professional_experience, placeholder: 'Professional experience' %>
    <%= f.text_field :interests_and_achievements, placeholder: 'Interests and achievements' %>
    <%= f.text_field :references, placeholder: 'References' %>

    <%= f.submit %>
  <% end %>
</div>