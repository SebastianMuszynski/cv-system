= render 'bg'

.job-details
  .job-title= @job.title
  .job-content
    - if @job.logo?
      = image_tag @job.logo, class: "job-logo"
    .job-deadline
      %span.bold Deadline:
      = @job.deadline
    .job-salary
      %span.bold Salary:
      = "Â£#{@job.salary}"
    .job-category
      %span.bold Category:
      = @job.category
    .job-description
      = @job.description
  .center
    = link_to 'Edit', edit_admin_job_path(@job), class: "link"
    |
    = link_to 'Remove', [:admin, @job], method: :delete, data: { confirm: 'Are you sure?' }, class: "link"

.centered-btn= link_to 'Back to jobs page', admin_jobs_path, class: "link"