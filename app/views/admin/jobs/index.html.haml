= render 'bg'
%table.jobs-table
  %thead
    %tr
      %th Job title
      %th Job description
      %th Job salary
      %th Job category
      %th Job logo
  %tbody
    - @jobs.each do |job|
      %tr
        %td= job.title
        %td= job.description
        %td= job.salary
        %td= job.category
        %td= job.logo || "-"
        %td= link_to 'Show', [:admin, job]
        %td= link_to 'Edit', edit_admin_job_path(job)
        %td= link_to 'Destroy', [:admin, job], method: :delete, data: { confirm: 'Are you sure?' }
.under-form-links
  = link_to 'New Job', new_admin_job_path
