= render 'bg'
- @feedbacks.each do |feedback|
  .preview-box
    .header= "Feedback ##{feedback.id}"
    %table
      %tr
        %td Created date:
        %td= feedback.created_at.strftime("%H:%m %d.%m.%Y")
      %tr
        %td Student name:
        %td= "#{feedback.cv.user.first_name} #{feedback.cv.user.last_name}"
      %tr
        %td CV status:
        %td{class: "status status-#{feedback.cv.status}"}
          - if feedback.cv.accepted?
            ready to send
          - elsif feedback.cv.rejected?
            needs improvement
          - else
            pending
    .center
      = link_to 'Preview', admin_feedback_path(feedback), class: "link"
