= render 'bg'
.filter-box
  .search
    %p Search:
    %input{:type => "text"}/
  .category
    %p Filter by category:
    %button Science
    %button Computing
    %button Engineering
  .date-added
    %p Filter by added date:
    %button Newest
    %button Oldest
  .deadline
    %p Filter by deadline:
    %button Upcoming
    %button Furthest
- @jobs.each do |job|
  .job-details
    .job-title= job.title
    .job-content
      - if job.logo.present?
        = image_tag job.logo, class: "job-logo"
      .job-deadline
        %span.bold Deadline:
        = job.deadline
      .job-salary
        %span.bold Salary:
        = "Â£#{job.salary}"
      .job-category
        %span.bold Category:
        = job.category
      .job-description
        = job.description
    .apply-link= link_to "Apply", new_job_cv_path(job), class: "link"
