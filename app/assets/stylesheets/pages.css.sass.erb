#homepage
  background: url(<%= asset_path "bg7.jpg" %>) no-repeat center center fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  text-align: center
  position: absolute
  top: 0
  left: 0
  height: 100%
  width: 100%

  .text-box
    position: relative
    top: 50%
    transform: translateY(-50%)
    background-color: rgba(0,0,0,.8)
    overflow: auto
    height: 350px

    h1
      font-size: 4vw
      font-weight: normal
      line-height: 2em
      color: white
      text-shadow: 1px 1px black

    h3
      font-size: 2vw
      color: #E32D40

  nav 
    position: relative
    top: 30px

    a
      border-radius: 5px
      border: 1px solid white
      color: white
      display: inline-block
      font-size: 22px
      margin: 20px
      width: 200px
      height: 50px
      line-height: 50px
      text-decoration: none
      -webkit-transition: all .5s
      -o-transition: all .5s
      transition: all .5s

      &:hover
        background-color: white
        color: black
