#homepage
  background: url(<%= asset_path "bg1.jpg" %>) no-repeat center center fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  text-align: center
  position: absolute
  top: 0
  left: 0
  height: 100%
  width: 100%

  .text-box
    position: relative
    top: 50%
    transform: translateY(-50%)

    h1
      font-size: 4vw
      font-weight: normal
      line-height: 2em
      color: white
      text-shadow: 1px 1px black

    h3
      font-size: 2vw
      color: #E32D40

  nav 
    position: relative
    top: 50px

    a
      border-radius: 5px
      border: 1px solid white
      color: white
      display: inline-block
      font-size: 1vw
      margin: 20px
      width: 10vw
      height: 2.8vw
      line-height: 2.8vw
      text-decoration: none
      -webkit-transition: all .5s
      -o-transition: all .5s
      transition: all .5s

      &:hover
        background-color: white
        color: black
